#include <stdio.h>
#include <string.h>
int longest(char*s){
    int n=strlen(s),st[1000],top=0,ans=0;
    st[top++]=-1;
    for(int i=0;i<n;i++){
        if(s[i]=='(') st[top++]=i;
        else {
            top--;
            if(top==0) st[top++]=i;
            else{
                int len=i-st[top-1];
                if(len>ans) ans=len;
            }
        }
    }
    return ans;
}
int main(){ printf("%d\n",longest(")()())")); }
